{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-state-machine/machine": ["libs/machine/src/index.ts"],
      "@nx-state-machine/data": ["libs/data/src/index.ts"],
      "@nx-state-machine/ui-ng": ["libs/ui-ng/src/index.ts"],
      "@nx-state-machine/ui-react": ["libs/ui-react/src/index.ts"],
      "@nx-state-machine/ng-todos": ["libs/ng-todos/src/index.ts"],
      "@nx-state-machine/react-todos": ["libs/react-todos/src/index.ts"],
      "@nx-state-machine/ng-common": ["libs/ng-common/src/index.ts"],
      "@nx-state-machine/react-common": ["libs/react-common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
